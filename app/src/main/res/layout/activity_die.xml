<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_die"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/general_background"
    tools:context="com.ljuboandeva.andragochi.DieActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="125dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Sorry!"
            android:fontFamily="casual"
            android:textScaleX="2"
            android:id="@+id/textView_Sorry"
            android:paddingBottom="@dimen/text_bottom_padding"
            android:paddingTop="@dimen/text_top_padding"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="46dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Your pet is dead.."
            android:fontFamily="casual"
            android:textScaleX="2"
            android:id="@+id/textView_dead"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:text="Restart"
                android:fontFamily="casual"
                android:id="@+id/B_restart"
                android:background="@drawable/confirm"/>
            <Button
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:text="Exit"
                android:fontFamily="casual"
                android:id="@+id/B_exit"
                android:background="@drawable/confirm"/>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
