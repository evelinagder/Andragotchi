<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:id="@+id/activity_home"
    android:background="@drawable/background_home"
    tools:context="com.ljuboandeva.andragochi.HomeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:id="@+id/linearLayout">

        <Button
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:id="@+id/button_shop"
            android:src="@drawable/confirm"
            android:fontFamily="casual"
            android:textAlignment="center"
            android:textSize="40sp"
            android:text="Shop"
            android:background="@drawable/confirm"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_weight="1"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:id="@+id/button_go_out"
            android:src="@drawable/confirm"
            android:fontFamily="casual"
            android:textAlignment="center"
            android:textSize="40sp"
            android:text="Go Out"
            android:background="@drawable/confirm"
            android:layout_alignParentEnd="true"
            android:layout_above="@+id/button_shop"
            android:layout_alignParentLeft="true"
            android:layout_weight="1"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout2"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true">



        <Button
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:id="@+id/button_clean"
            android:src="@drawable/confirm"
            android:fontFamily="casual"
            android:textAlignment="center"
            android:textSize="30sp"
            android:text="Clean"
            android:layout_weight="1"
            android:background="@drawable/confirm"
            android:layout_alignParentEnd="true"
            android:layout_above="@+id/button_medicine"
            android:layout_alignParentLeft="true" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="casual"
        android:textSize="35sp"
        android:id="@+id/textView_health"
        android:textColor="@color/blue"
        android:layout_below="@+id/imageView5"
        android:layout_alignEnd="@+id/imageView6" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView_play"
        android:fontFamily="casual"
        android:textSize="35sp"
        android:layout_below="@+id/imageView8"
        android:textColor="@color/blue"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="casual"
        android:textSize="35sp"
        android:id="@+id/textView_clean"
        android:layout_below="@+id/imageView6"
        android:textColor="@color/blue"
        android:layout_alignLeft="@+id/imageView7"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="casual"
        android:textSize="35sp"
        android:id="@+id/textView_food"
        android:layout_below="@+id/imageView6"
        android:textColor="@color/blue"
        android:layout_alignEnd="@+id/imageView6"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="casual"
        android:textSize="60sp"
        android:id="@+id/textView_name"
        android:textColor="@color/blue"
        android:layout_above="@+id/pet_image_home"
        android:layout_centerHorizontal="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:layout_below="@+id/linearLayout"
        android:id="@+id/linearLayout3">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="10"
            android:foregroundGravity="left"
            android:paddingLeft="1dp"
            android:scaleType="centerCrop"
            android:id="@+id/button_inventory"
            android:background="@android:color/transparent"
            android:src="@drawable/inventory"/>

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="50"/>

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="10"
            android:foregroundGravity="right"
            android:scaleType="centerCrop"
            android:id="@+id/button_settings"
            android:background="@android:color/transparent"
            android:src="@drawable/settings"/>


    </LinearLayout>

    <ImageView
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:id="@+id/pet_image_home"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/drago_home"/>



    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/imageView5"
        android:background="@drawable/heart"
        android:layout_alignTop="@+id/pet_image_home"
        android:layout_alignEnd="@+id/textView_health" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/imageView8"
        android:background="@drawable/play"
        android:layout_marginTop="8dp"
        android:layout_alignTop="@+id/pet_image_home"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/imageView6"
        android:background="@drawable/food"
        android:layout_alignTop="@+id/imageView7"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/imageView7"
        android:background="@drawable/broom"
        android:layout_below="@+id/textView_play"/>


</RelativeLayout>
