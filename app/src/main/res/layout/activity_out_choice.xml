<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/general_background"
    tools:context="com.ljuboandeva.andragochi.OutChoiceActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Where do you want to take me?"
        android:fontFamily="casual"
        android:textScaleX="2"
        android:id="@+id/textView3"
        android:paddingBottom="@dimen/text_bottom_padding"
        android:paddingTop="@dimen/text_top_padding"
        android:textAlignment="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:id="@+id/button2"
        android:src="@drawable/confirm"
        android:fontFamily="casual"
        android:textAlignment="center"
        android:textSize="40sp"
        android:text="Park"
        android:background="@drawable/confirm"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/button3"
        android:layout_alignParentLeft="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:id="@+id/button3"
        android:src="@drawable/confirm"
        android:fontFamily="casual"
        android:textAlignment="center"
        android:textSize="40sp"
        android:text="Sandbox"
        android:background="@drawable/confirm"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:id="@+id/button4"
        android:src="@drawable/confirm"
        android:fontFamily="casual"
        android:textAlignment="center"
        android:textSize="40sp"
        android:text="pool"
        android:background="@drawable/confirm"
        android:layout_above="@+id/button2"
        android:layout_alignParentLeft="true" />

</LinearLayout>
