<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/general_background"
    android:orientation="vertical"
    tools:context="com.ljuboandeva.andragochi.PetChoiceActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:text="Choose your pet"
        android:fontFamily="casual"
        android:textSize="24sp"
        android:textColor="#000000"
        android:textScaleX="2"
        android:id="@+id/textView2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9"
        android:layout_below="@+id/textView2"
        android:orientation="horizontal"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true">

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:id="@+id/imageButton"
            android:layout_gravity="center"
            android:background="@drawable/arrow_left"
            android:layout_weight="1" />

        <HorizontalScrollView
            android:layout_width="0dp"
            android:layout_weight="10"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="300dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/tamagochi"/>
                <ImageView
                    android:layout_width="300dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/tamagochi"/>
                <ImageView
                    android:layout_width="300dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/tamagochi"/>

            </LinearLayout>



        </HorizontalScrollView>



        <ImageButton
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:id="@+id/imageButton2"
            android:background="@drawable/arrow_right"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_gravity="center"
            android:layout_weight="1"/>


    </LinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Name your pet:"
        android:fontFamily="casual"
        android:textScaleX="2"
        android:id="@+id/textView10"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:id="@+id/editText"
        android:layout_below="@+id/name"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:id="@+id/Button_confirmPet"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/confirm"
        android:fontFamily="casual"
        android:textAlignment="center"
        android:textSize="40sp"
        android:text="CONFIRM"
        android:background="@drawable/confirm"/>


</LinearLayout>
