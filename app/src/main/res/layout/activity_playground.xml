<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/background_pool"
    android:id="@+id/layout_playground"
    tools:context="com.ljuboandeva.andragochi.PlaygroundActivity">

    <ImageView
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:id="@+id/pet_image_play"
        android:background="@drawable/drago_home"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/imageView_heart"
        android:background="@drawable/heart"
        android:layout_alignTop="@+id/imageView_ball"
        android:layout_alignParentEnd="true"
        android:layout_alignStart="@+id/imageView_food" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/imageView_food"
        android:background="@drawable/food"
        android:layout_below="@+id/textView_play"
        android:layout_alignParentEnd="true"
        />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/imageView_clean"
        android:background="@drawable/broom"
        android:layout_below="@+id/textView_play"
        android:layout_alignParentStart="true"
         />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/imageView_ball"
        android:background="@drawable/play"
        android:layout_above="@+id/textView_play"
        android:layout_alignParentStart="true"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="casual"
        android:textSize="35sp"
        android:text="100"
        android:id="@+id/textView_healthp"
        android:textColor="@color/blue"
        android:layout_below="@+id/imageView_heart"
        android:layout_alignEnd="@+id/imageView_food" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="casual"
        android:textSize="35sp"
        android:text="100"
        android:textColor="@color/blue"
        android:id="@+id/textView_clean"
        android:layout_below="@+id/imageView_clean"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="casual"
        android:textSize="35sp"
        android:text="100"
        android:textColor="@color/blue"
        android:id="@+id/textView_food"
        android:layout_below="@+id/imageView_food"
        android:layout_alignParentEnd="true"
         />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:layout_below="@+id/linearLayout"
        android:id="@+id/linearLayout3">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="10"
            android:foregroundGravity="left"
            android:paddingLeft="1dp"
            android:id="@+id/button_inventory_playground"
            android:scaleType="centerCrop"
            android:background="@android:color/transparent"
            android:src="@drawable/inventory"/>

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="50"/>

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="10"
            android:foregroundGravity="right"
            android:scaleType="centerCrop"
            android:id="@+id/button_settings_playground"
            android:background="@android:color/transparent"
            android:src="@drawable/settings"/>


    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="casual"
        android:textSize="50sp"
        android:id="@+id/textView9"
        android:textColor="@color/blue"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/pet_image_play"/>

    <WebView
        android:id="@+id/toy_play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="casual"
        android:textSize="35sp"
        android:text="100"
        android:id="@+id/textView_play"
        android:textColor="@color/blue"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <Button
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:id="@+id/button_shop_playground"
            android:src="@drawable/confirm"
            android:fontFamily="casual"
            android:textAlignment="center"
            android:textSize="30sp"
            android:text="Shop"
            android:background="@drawable/confirm"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_weight="2" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/imageView2"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/coins" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="casual"
            android:textSize="30sp"
            android:gravity="center"
            android:id="@+id/textView_money_playground"
            android:textColor="@color/blue" />

        <Button
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:id="@+id/button_home"
            android:src="@drawable/confirm"
            android:fontFamily="casual"
            android:textAlignment="center"
            android:textSize="30sp"
            android:text="Home"
            android:background="@drawable/confirm"
            android:layout_alignParentEnd="true"
            android:layout_above="@+id/button_shop"
            android:layout_alignParentLeft="true"
            android:layout_weight="2" />
    </LinearLayout>


</RelativeLayout>
